{
  "manifest_version": 3,
  "name": "TimeMachine",
  "version": "1.5.0",
  "description": "Track your browsing habits and boost productivity with insightful stats.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "idle",
    "windows",
    "notifications"
  ],
  "host_permissions": [
    "https://timemachine-1.onrender.com/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*",
    "https://api.emailjs.com/*",
    "https://quickchart.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "tm_toggle_pomodoro": {
      "suggested_key": { "default": "Ctrl+Shift+P" },
      "description": "Start/Stop Pomodoro Timer"
    },
    "tm_toggle_expand": {
      "suggested_key": { "default": "Ctrl+Shift+E" },
      "description": "Toggle expanded popup size"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:3000 http://127.0.0.1:3000 https://timemachine-1.onrender.com https://api.emailjs.com https://quickchart.io"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "chart.min.js",
        "report-scheduler.js",
        "guide.html",
        "blocked.html",
        "blocked.js",
        "modules/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
