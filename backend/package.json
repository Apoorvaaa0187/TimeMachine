{
  "name": "backend",
  "version": "1.0.0",
  "description": "TimeMachine backend service",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "setup": "npm install && echo 'Backend setup complete. Copy .env.example to .env and configure your MongoDB URI.'",
    "cleanup": "node cleanup.js",
    "cleanup:old-schema": "node -e \"require('./utils/dataCleanup').cleanupOldSchemaData().then(console.log).catch(console.error).finally(() => process.exit())\"",
    "cleanup:old-data": "node -e \"require('./utils/dataCleanup').cleanupOldData(31).then(console.log).catch(console.error).finally(() => process.exit())\"",
    "stats": "node -e \"require('./utils/dataCleanup').getDataStats().then(stats => console.log(JSON.stringify(stats, null, 2))).catch(console.error).finally(() => process.exit())\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.1",
    "pdfkit-table": "^0.1.99",
    "quickchart-js": "^3.1.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
